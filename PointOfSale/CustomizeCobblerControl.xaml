<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20">
        <TextBlock FontSize="30">Customize Cobbler</TextBlock>
        <CheckBox Margin="20" FontSize="30" IsChecked="{Binding Path=WithIceCream}">IceCream</CheckBox>
        <TextBlock FontSize="30" Margin="20">Fruit Filling:</TextBlock>
            <CheckBox Margin="10" FontSize="30" IsChecked="{Binding Path=Peach}">Peach</CheckBox>
            <CheckBox Margin="10" FontSize="30" IsChecked="{Binding Path=Cherry}">Cherry</CheckBox>
            <CheckBox Margin="10" FontSize="30" IsChecked="{Binding Path=Blueberry}">Blueberry</CheckBox>


        </StackPanel>
    </Grid>
</UserControl>
